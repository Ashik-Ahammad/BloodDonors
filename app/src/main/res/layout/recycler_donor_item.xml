<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="@color/white"
    android:background="@drawable/rounded_corner">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_more_vert_24"
        android:layout_alignParentEnd="true"
        android:padding="15dp"
        android:id="@+id/edit_btn"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/donor_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donor Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginVertical="4dp"
        />
    <TextView
        android:id="@+id/donor_BG_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood Group"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="17sp"
        android:layout_below="@+id/donor_name_text_view"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:id="@+id/donor_timestamp_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time: "
        android:textSize="15sp"
        android:gravity="left"
        android:layout_below="@+id/donor_BG_text_view"
        android:layout_marginVertical="4dp"/>

</RelativeLayout>